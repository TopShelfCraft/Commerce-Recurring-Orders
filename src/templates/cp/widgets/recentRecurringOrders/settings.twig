{% from '_includes/forms' import text %}
{% from '_includes/forms' import select %}

<div id="{{ id }}">

    <div class="field">

        <div class="heading">
            <label id="recurrenceStatusLabel">{{ "Recurrence Status"|t('recurring-orders') }}</label>
        </div>

        <div class="input ltr">

            {{ select({
                name: 'recurrenceStatus',
                value: widget.recurrenceStatus,
                options: {'': "All"|t('commerce')} | merge( statuses | map((label, value) => {value: value, label: label}) ),
                errors: widget.getErrors('recurrenceStatus'),
                inputAttributes: {
                    aria: {
                        describedby: '#recurrenceStatusLabel',
                    },
                },
            }) }}

        </div>

    </div>

    <div class="field">

        <div class="heading">
            <label id="limitLabel" for="limit">{{ "Limit"|t('commerce') }}</label>
        </div>

        <div class="input ltr">

            {{ text({
                type: 'number',
                name: 'limit',
                value: widget.limit,
                inputmode: 'numeric',
                size: 2,
                errors: widget.getErrors('limit'),
                inputAttributes: {
                    aria: {
                        describedby: '#limitLabel',
                    },
                },
            }) }}

        </div>

    </div>

</div>
