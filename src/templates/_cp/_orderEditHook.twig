<style>
    #page-title h1:after {
        display: inline-block;
        font-weight: 400;
        font-size: 80%;
        margin-left: 1em;
        color: rgba(42,99,99,0.8);
    }
</style>

{% if order.hasRecurrenceStatus %}

<style>
#page-title h1:after {
    content: "\267B \0020 {{ craft.recurringOrders.t('_status:'~order.recurrenceStatus) }}";
}
</style>

{% elseif order.parentOrderId %}

<style>
    #page-title h1:after {
        content: "\267B \0020 (Order Recurrence)";
    }
</style>

{% elseif order.findDerivedOrders.count %}

<style>
    #page-title h1:after {
        content: "\267B \0020 (Originating Order)";
    }
</style>

{% endif %}
